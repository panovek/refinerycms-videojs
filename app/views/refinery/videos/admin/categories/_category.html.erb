<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(category) -%>">
  <span class='title'>
    <%= category.name %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_videos_admin_category_path(category),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.videos_admin_category_path(category),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :data => {:confirm => t('message', :scope => 'refinery.admin.delete', :title => category.name) + t('.confirm')},
        :method => :delete %>
  </span>
</li>
